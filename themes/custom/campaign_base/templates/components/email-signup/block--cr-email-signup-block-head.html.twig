{%
set classes = [
'block-cr-email-signup',
'block--cr-email-signup',
'block--cr-email-signup--head',
'block--cr-email-signup--step-1',
]
%}

<div{{ attributes.addClass(classes) }}>
  <div class="block--cr-email-signup__inner-wrapper">
    <div class="cr-email-signup--messages">

      <div aria-live="polite" aria-relevant="additions text" aria-atomic="true">
      {{ content.initial_message }}
      </div>
      
      <div aria-live="polite" aria-relevant="all" aria-atomic="true">
        {{ content.first_success_message }}
      </div>

    </div>
    <div aria-live="assertive" aria-relevant="all" aria-atomic="true">
      <div class="esu-errors messages messages--error error-msg-cr-header-email-signup-form"></div>
    </div>
    {{ content|without('initial_message', 'first_success_message') }}
    <a role="button" class="close-button" href="#" aria-label="close email sign up form">
      <svg class="icon" focusable="false" tabindex="-1">
        <use xlink:href="#close-cross"></use>
      </svg>
    </a>
  </div>
</div>
